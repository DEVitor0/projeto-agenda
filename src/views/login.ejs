<%- include('includes/head') %> <%- include('includes/nav') %> <%-
include('includes/style')%>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Título centralizado -->
      <h1 class="text-center" style="font-weight: 300; color: #333">
        Criar conta ou entrar
      </h1>
      <p class="text-center lead" style="color: #666">
        Faça seu login ou crie uma conta abaixo
      </p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-md-6 mb-5">
          <h4 class="mb-3" style="color: #333">Faça seu cadastro</h4>
          <p style="color: #666">
            Se você ainda não possui uma conta, preencha o formulário abaixo:
          </p>
          <form
            class="form-cadastro"
            action="/login/register"
            method="POST"
            style="
              background-color: #f9f9f9;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            "
          >
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <div class="form-group mb-4">
              <label style="color: #555">Seu email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                style="
                  border-radius: 5px;
                  padding: 10px;
                  border: 1px solid #ddd;
                "
                required
              />
            </div>
            <div class="form-group mb-4">
              <label style="color: #555">Sua senha</label>
              <input
                type="password"
                class="form-control"
                name="senha"
                style="
                  border-radius: 5px;
                  padding: 10px;
                  border: 1px solid #ddd;
                "
                required
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary btn-block"
              style="
                border-radius: 5px;
                background-color: #6c63ff;
                border: none;
                padding: 10px 0;
                font-weight: 500;
              "
            >
              Criar minha conta
            </button>
          </form>
        </div>

        <!-- Seção de Login -->
        <div class="col-md-6 mb-5">
          <h4 class="mb-3" style="color: #333">Faça seu login</h4>
          <p style="color: #666">
            Se você já possui uma conta, faça seu login abaixo:
          </p>
          <form
            class="form-login"
            action="/login/login"
            method="POST"
            style="
              background-color: #f9f9f9;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            "
          >
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <div class="form-group mb-4">
              <label style="color: #555">Seu email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                style="
                  border-radius: 5px;
                  padding: 10px;
                  border: 1px solid #ddd;
                "
                required
              />
            </div>
            <div class="form-group mb-4">
              <label style="color: #555">Sua senha</label>
              <input
                type="password"
                class="form-control"
                name="senha"
                style="
                  border-radius: 5px;
                  padding: 10px;
                  border: 1px solid #ddd;
                "
                required
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary btn-block"
              style="
                border-radius: 5px;
                background-color: #6c63ff;
                border: none;
                padding: 10px 0;
                font-weight: 500;
              "
            >
              Entrar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
